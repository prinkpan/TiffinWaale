<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiffinWaale.Views.SupplierServicesPage"
             Title="Services">


    <ContentPage.Content>
        <StackLayout Orientation="Vertical"  Margin="10" VerticalOptions="FillAndExpand">
            <StackLayout x:Name="ServiceTypeStackLayout" Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                <Label x:Name="ServiceTypeLabel" Text="Service Type :" />
            </StackLayout>
            <StackLayout x:Name="FoodCategoryStackLayout" Orientation="Horizontal" >
                <Label x:Name="FoodCategoryLabel" Text="Food Category :" />
            </StackLayout>
            <StackLayout x:Name="DeliveryStackLayout" Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                <Label x:Name="DeliveryLabel" Text="Delivery :" />
            </StackLayout>
            <StackLayout x:Name="CuisineLayout" Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                <Label x:Name="CuisineLabel" Text="Cuisine :" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>