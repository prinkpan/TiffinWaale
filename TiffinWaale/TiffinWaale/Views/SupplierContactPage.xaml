<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiffinWaale.Views.SupplierContactPage"
             xmlns:c="clr-namespace:TiffinWaale.Controls"
             Title="Contact">
    <ContentPage.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

            <Label Text="{Binding Supplier.Name}" Grid.Row="0"/>
            <Label Text="{Binding Supplier.Address}" Grid.Row="1"/>
            <c:CustomMap x:Name="TiffinMap"
                     Items="{Binding SupplierPin}"
                     WidthRequest="320"
                     IsShowingUser="True"
                     MapType="Street"
                     Grid.Row="0"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>